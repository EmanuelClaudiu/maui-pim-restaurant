<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_App_Tutorial.PredefinedQuantityPage"
             Title="PredefinedQuantityPage"
             BackgroundColor="#3E3E46">
    <VerticalStackLayout>
        <Label 
            Text="Alege cantitatea"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView Grid.Column="0" x:Name="predefinedQuantitiesUI" ItemSelected="OnPredefinedQuantityClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Alias}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>